<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itdan.document.dao.FancytreeNodeMapper">
  <resultMap id="BaseResultMap" type="com.itdan.document.domain.FancytreeNode">
    <id column="tree_id" jdbcType="INTEGER" property="treeId" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="folder" jdbcType="INTEGER" property="folder" />
    <result column="path" jdbcType="VARCHAR" property="path" />
    <result column="parentId" jdbcType="INTEGER" property="parentId" />
  </resultMap>



  <!--添加树形节点到数据库中-->
  <insert id="addTreeNode" parameterType="com.itdan.document.domain.FancytreeNode">
   INSERT  into  tree_node
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="title != null" >
        title,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="path != null" >
        path,
      </if>
      <if test="pId != null" >
        pId,
      </if>
      <if test="isHidden != null" >
        isHidden
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
      <if test="title != null" >
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="path != null" >
        #{path,jdbcType=VARCHAR},
      </if>
      <if test="pId != null" >
        #{pId,jdbcType=INTEGER},
      </if>
      <if test="isHidden != null" >
        #{isHidden,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <!--根据磁盘路径，从数据库中获取该磁盘所有相关文件（树形节点)-->
  <select id="getAllFile" parameterType="String" resultMap="BaseResultMap">
    select * from tree_node
    where
    <if test="diskName != null" >
      disk_name=#{diskName}
    </if>
  </select>

</mapper>